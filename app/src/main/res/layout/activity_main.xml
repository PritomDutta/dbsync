<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.claudiodegio.dbsync.sample.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btDb1"
            android:text="DB 1 (1 TABLE)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <Button
            android:id="@+id/btDb2"
            android:text="DB 2 (2 TABLE)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <Button
            android:id="@+id/btDb3"
            android:text="DB 3 (1 TABLE with filter = 0)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btDb4"
            android:text="DB 4 (2 TABLE WITH JOIN)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btDb5"
            android:text="DB 5 (1 TABLE WITH MATCH RULE)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:text="TO GDRIVE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btGDrive"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btToDbManager"
            android:text="TO DB manager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>
