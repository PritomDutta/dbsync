<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.claudiodegio.dbsync.sample">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:name=".DbSyncApplication"
        android:theme="@style/AppTheme"
        android:screenOrientation="portrait">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".db1.MainDb1Activity"
            android:label="DB1"
            android:theme="@style/AppTheme">
        </activity>

        <activity
            android:name=".db1.InsertNameActivity"
            android:label="DB1 - I. NAME"
            android:theme="@style/AppTheme">
        </activity>

        <activity
            android:name=".db2.MainDb2Activity"
            android:label="DB2"
            android:theme="@style/AppTheme">
        </activity>

        <activity
            android:name=".db2.NamesActivity"
            android:label="DB2 -  NAME"
            android:theme="@style/AppTheme">
        </activity>

        <activity
            android:name=".db2.InsertNameActivity"
            android:label="DB2 - I. NAME"
            android:theme="@style/AppTheme">
        </activity>

        <activity
            android:name=".db2.CategoriesActivity"
            android:label="DB2 -  CATEGORY"
            android:theme="@style/AppTheme">
        </activity>

        <activity
            android:name=".db2.InsertCategoryActivity"
            android:label="DB2 - I. CATEGORY"
            android:theme="@style/AppTheme">
        </activity>


        <activity
            android:name=".TestGDriveActivity"
            android:label="GDRIVE"
            android:theme="@style/AppTheme">
        </activity>

        <activity
            android:name="im.dino.dbinspector.activities.DbInspectorActivity">
            <intent-filter tools:node="removeAll">
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name="com.claudiodegio.dbsync.GDriveEventService" android:exported="true">
            <intent-filter>
                <action android:name="com.google.android.gms.drive.events.HANDLE_EVENT"/>
            </intent-filter>
        </service>
    </application>

</manifest>